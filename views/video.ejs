<%- include('header') -%>

<header>
    <div class="header">
        <div class="header__grid">
            <div class="header__row">
                <div class="header__col">
                    <h1 class="header__title"><%= video.title %></h1>
                </div>
            </div>
        </div>
    </div>
</header>

<main>
    <div class="video">
        <div class="video__grid">
            <div class="video__row">
                <div class="video__col">
                    <video controls="controls" class="video__player">
                        <source src="<%= video.video %>" type="video/mp4">
                    </video>
                </div>
                <div class="video__col">
                    <p class="video__description"><%= video.description%></p>
                </div>
            </div>
        </div>
    </div>
    <div class="list">
        <div class="list__grid">
            <div class="list__row">
                <h2 class="list__category">Tengd myndb√∂nd</h2>
                <% video.related.forEach((videoID) => { %>
                    <% let related = (videos.find((vid) => vid.id === videoID)) %>
                        <div class="list__col">
                            <a href="/<%= related.id %>" class="list-item">
                                <div class="list-item__thumbnail">
                                    <img class="list-item__poster" src="<%= related.poster %>" alt="">
                                    <span class="list-item__duration"><%= duration(related.duration) %></span>
                                </div>
                                <div class="list-item__content">
                                    <h3 class="list-item__title"><%= related.title %></h3>
                                    <p class="list-item__age"><%= age(related.created) %></p>
                                </div>
                            </a>
                        </div>
                    
                <% }) %>
                <hr class="list__separator">
            </div>
        </div>
    </div>
</main>

<footer>
    <div class="footer">
        <div class="footer_grid">
            <div class="footer__row">
                <div class="footer__col">
                    <a class="footer__back" href="/">Til baka</a>
                </div>
            </div>
        </div>
    </div>
</footer>

<%- include('footer') -%>